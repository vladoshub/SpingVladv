<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="InfoBase" class="vocabulary.InfoBase">
        <constructor-arg index="0" type="java.lang.String" value="C:\\S.txt"/>
        <constructor-arg index="1" type="java.lang.String" value="^[A-Za-z]"/>
        <constructor-arg index="2" type="java.lang.String" value="[0-9]"/>
        <constructor-arg index="3" type="java.lang.String" value="^[A-Za-z]+_[А-Яа-я0]+$"/>
        <constructor-arg index="4" type="java.lang.String" value="^[0-9]+_[0-1]+$"/>
    </bean>

    <bean id="ServiceWorker" class="vocabulary.ServiceWorker">
        <constructor-arg ref="InfoBase"/>
    </bean>

    <bean id="Library" class="vocabulary.Library">
        <constructor-arg ref="InfoBase"/>
    </bean>

    <bean id="ChangeOps" class="vocabulary.ChangeOps">
        <constructor-arg ref="ServiceWorker"/>
        <constructor-arg ref="Library"/>

    </bean>


</beans>